<p id="notice"><%= notice %></p>

<h1>Creplies</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @creplies.each do |creply| %>
      <tr>
        <td><%= creply.text %></td>
        <td><%= creply.user %></td>
        <td><%= creply.comment %></td>
        <td><%= link_to 'Show', creply %></td>
        <td><%= link_to 'Edit', edit_creply_path(creply) %></td>
        <td><%= link_to 'Destroy', creply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

