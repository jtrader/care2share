<p id="notice"><%= notice %></p>

<h1>Rreplies</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>User</th>
      <th>Relpy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rreplies.each do |rreply| %>
      <tr>
        <td><%= rreply.text %></td>
        <td><%= rreply.user %></td>
        <td><%= rreply.relpy %></td>
        <td><%= link_to 'Show', rreply %></td>
        <td><%= link_to 'Edit', edit_rreply_path(rreply) %></td>
        <td><%= link_to 'Destroy', rreply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

