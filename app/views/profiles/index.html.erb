<p id="notice"><%= notice %></p>

<h3>My Profile</h3>
<div class="align-no-bg">
<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
    <% if current_user.id == profile.user_id %>
      <tr>
       <td> <% if profile.avatar.attached? %>
  <%= image_tag profile.avatar, class: 'avatar' %>
<% else %>
  <p>No avatar for this user</p>
<% end %>
        </td>
        <td><%= profile.name %></td>
        <td><%= profile.address %></td>
        <td><%= profile.phone %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
