<div class="align-no-bg">
<h3>Your Listings</h3>
</div>
<div class="align-no-bg">
<table>
  <thead>
    <tr>
      <th></th>
      <th>Date from</th>
      <th>Date to</th>
      <th>Price</th>
      <th>Motorhome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <% if current_user.id == listing.user_id %>   
      <tr>
        <td><%= image_tag listing.motorhome.uploaded_image, class: 'avatarsmall' %></td>
        <td><%= listing.start_time %></td>
        <td><%= listing.end_time %></td>
        <td><%= listing.price %></td>
        <td><%= listing.motorhome.make %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<div align="align-no-bg">
<h4 align="center"><%= link_to 'New Listing', new_listing_path %></h4>
</div>
