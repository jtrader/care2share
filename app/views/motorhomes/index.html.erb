<div class="align">
<p id="notice"><%= notice %></p>
<h3>My Motorhomes</h3>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Make</th>
      <th>Model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @motorhomes.each do |motorhome| %>
      <% if current_user.id == motorhome.user_id %>
      <tr>
        <td><%= image_tag motorhome.uploaded_image, class: 'avatar' %><td>
        <td><%= motorhome.make %></td>
        <td><%= motorhome.model %></td>
        <td><%= link_to 'Show', motorhome %></td>
        <td><%= link_to 'Edit', edit_motorhome_path(motorhome) %></td>
        <td><%= link_to 'Destroy', motorhome, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Motorhome', new_motorhome_path %>
</div>
